﻿@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Industria La Popular S.A.</title>

    <link rel="shortcut icon" href="~/img/LaPopular.ico" type="image/x-icon">
 

    <link rel="stylesheet" href="~/css/Login.css">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

    <!------ Include the above in your HEAD tag ---------->
    <!-- https://bootsnipp.com/snippets/GQ3Pl -->

</head>

<body>

    <section class="login-block">
        <div class="container">
            <div class="row">
                
                <div class="col-lg-8 banner-sec">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        </ol>
                        <div class="carousel-inner" role="listbox">
                            <div class="carousel-item active">
                                <img class="d-block img-fluid" src="~/img/Login/ILP_Mision.png" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block img-fluid" src="~/img/Login/ILP_Productos.png" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block img-fluid" src="~/img/Login/ILP_Productos2.png" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block img-fluid" src="~/img/Login/ILP_Valores.png" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block img-fluid" src="~/img/Login/ILP_Vision.png" alt="First slide">
                            </div>
                        </div>

                    </div>
                </div>

                <div class="col-lg-4 login-sec">
                    <div class="">
                        <img class="d-block img-fluid" src="~/img/LaPopularLogo.png" alt="First slide">
                    </div>

                    <div class="" style="margin-top: 50px">
                        <h2 class="text-center"><strong>Ingreso al sistema</strong></h2>
                    </div>

                    <form class="login-form">
                    
                        <div class="form-group">                            
                            <label for="exampleInputEmail1" class="">Usuario</label>
                            <input type="text" class="form-control" placeholder="Ingrese su usuario">

                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1" class="">Contraseña</label>
                            <input type="password" class="form-control" placeholder="Ingrese su contraseña">
                        </div>

                        <button type="submit" class="btn btn-login float-right btn-primary">Aceptar</button>

                    </form>
                </div>

            </div>
        </div>
    </section>

</body>
</html>
